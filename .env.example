# Environment variables for Bank Cards API
# Copy this file to .env and customize for your environment

# ================= DATABASE =================
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ================= JWT SETTINGS =================
JWT_SECRET=myVerySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ================= ENCRYPTION =================
ENCRYPTION_SECRET_KEY=BankCardsEncryptionKey123456789012345678901234567890

# ================= CORS =================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ================= DOCKER COMPOSE =================
COMPOSE_PROJECT_NAME=bankcards
POSTGRES_DB=bankcards
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ================= PRODUCTION OVERRIDES =================
# Uncomment and set secure values for production:
# JWT_SECRET=your_production_secret_key_minimum_32_characters_long
# DB_PASSWORD=your_very_secure_database_password
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com